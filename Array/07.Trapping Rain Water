//Like bar graph and fill all the gaps with water. Calulate the amount of water that can be filled
Input: height = [4,2,0,3,2,5]
Output: 9

//Hint calculate lmax & rmax for each element. 

int trap(vector<int>& height) {
        int n = height.size();
        if(n<=2) return 0;
        int lmax[n], rmax[n];
        if(height[0]==0){
            
        }
        lmax[0]=height[0], rmax[n-1]=height[n-1];
        for(int i=1;i<n;i++){       //Pre-compute lmax & rmax
            lmax[i]=max(lmax[i-1],height[i]);
        }
        for(int i=n-2; i>=0;i--){
            rmax[i] = max(rmax[i+1],height[i]);
        }
        int w=0;
        for(int i=1; i<n-1; i++){
            if(lmax[i]>rmax[i])     //Very important condition
                w = w + min(lmax[i], rmax[i]-height[i]);
            else
                w = w + min(rmax[i], lmax[i]-height[i]);
        }
        return w;
    }
