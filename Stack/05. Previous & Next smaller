It returns the index

int main()
{
    vector<int> a = {4, 10, 5, 8, 20, 15, 3, 12};
    int n = a.size();
    stack<int> s;
    vector<int> ps(n);
    vector<int> ns(n);
    //Previous Smaller
    for(int i =0; i<n; i++){
        while(s.empty()==false && a[s.top()]>=a[i])
            s.pop();
        ps[i] = (s.empty())?-1: s.top();
        s.push(i);
    }
    
    while(s.empty()==false) s.pop();

    //Next Smaller
    for(int i = n-1; i>=0; i--){
        while(s.empty()==false && a[s.top()]>=a[i])
            s.pop();
        ns[i] = (s.empty())?n:s.top();
        s.push(i);
    }

    for(int i = 0; i<n; i++){
        cout<<ps[i]<<" ";
    }
    cout<<endl;
    for(int i = 0; i<n; i++){
        cout<<ns[i]<<" ";
    }
}
