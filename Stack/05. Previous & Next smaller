It returns the index

int main()
{
    vector<int> a = {4, 10, 5, 8, 20, 15, 3, 12};
    int n = a.size();
    stack<int> s;
    vector<int> ps(n);
    vector<int> ns(n);
    
    for(int i =0; i<n; i++){        //Previous Smaller
        while(s.empty()==false && a[s.top()]>=a[i])
            s.pop();
        ps[i] = (s.empty())?-1: s.top(); //for previousSmaller we set -1 as out-of-bounds
        s.push(i);
    }
    
    while(s.empty()==false) s.pop();

    
    for(int i = n-1; i>=0; i--){    //Next Smaller
        while(s.empty()==false && a[s.top()]>=a[i])
            s.pop();
        ns[i] = (s.empty())?n:s.top(); //for nextSmaller, we are setting as n for out-of-bounds, not -1
        s.push(i);
    }

    for(int i = 0; i<n; i++){
        cout<<ps[i]<<" ";
    }
    cout<<endl;
    for(int i = 0; i<n; i++){
        cout<<ns[i]<<" ";
    }
}
